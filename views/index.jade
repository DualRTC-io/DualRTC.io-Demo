    div#container.hide.container
      div(error-bar message="errorService.errorMessage")

      header
        p.pull-right: span.badge
          span.glyphicon.glyphicon-user
          |  {{userCount}}
        h3
          a(href="/") DualRTC
          small.mgl2 Dual Monitor System based WebRTC
      hr

      div.panel.panel-success#divMakeRoom(style="display:block")
        div.panel-heading
          span.glyphicon.glyphicon-home
          |  Create your room
        div.panel-body
          div.input-group
            span.input-group-addon: span.glyphicon.glyphicon-lock
            input.form-control#makeName(type="text" placeholder="Insert room name.")
            span.input-group-btn
              button.btn.btn-success#btnCopy(title="Copy room name")
                span.glyphicon.glyphicon-share
              button.btn.btn-success#btnMakeRoom(title="Create your name")
                span.glyphicon.glyphicon-log-in

      div.panel.panel-info(id="divJoinRoom" style="display:block")
        div.panel-heading
          span.glyphicon.glyphicon-home
          |  Join the room
        div.panel-body
          div.input-group
            span.input-group-addon: span.glyphicon.glyphicon-search
            input.form-control#joinName(type="text" placeholder="Insert room name.")
            span.input-group-btn
              button.btn.btn-info#btnJoinRoom(title="Join the room")
                span.glyphicon.glyphicon-log-in

      <!-- local/remote videos container -->
      div.panel.panel-warning#divScreen(style="display:none")
        div.panel-heading
          span.glyphicon.glyphicon-play
          |  Screen
        div.panel-content
          div#videos-container

      hr

      div.row
        div.col-xs-12(ng-view)

      hr
      footer
        p Developed by <a href="https://dualrtc-io.github.io/"><strong>Team.DualRTC</strong></a> and Cover template by <a href="http://www.tested.co.kr" target="_blank">Tested</a>.

    script(type="text/javascript" src="dualrtc/dualrtc.js")
    script(type="text/javascript" src="dualrtc/adapter.js")
    script(type="text/javascript" src="dualrtc/detectrtc.js")
    script(type="text/javascript" src="dualrtc/screenShare.js")