doctype html
html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="ko" lang="ko")
  head
    meta(http-equiv="content-type" content="text/html; charset=UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    title DualRTC - Dual Monitor System based WebRTC

    link(rel='shortcut icon', type='image/x-icon', href='https://github.com/DualRTC-io/DualRTC-io.github.io/blob/master/img/monitor.png')
    link(rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
    link(rel="stylesheet" type="text/css" href="css/style.css")
    link(rel="stylesheet" type="text/css" href="css/nprogress.css")

    script(type="text/javascript" data-main="system/main" src="vendor/require.js")
    script(type="text/javascript" src="vendor/jquery-2.1.4.min.js")
    script(type="text/javascript" src="vendor/firebase.js")

  body(ng-controller="CommonCtrl")

